<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.hfuu.web.entity.TaskEntity" table="task" schema="hfuutest">
        <id name="taskId">
            <column name="taskId" sql-type="int(11)"/>
        </id>
        <property name="taskName">
            <column name="taskName" sql-type="varchar(64)" length="64" not-null="true"/>
        </property>
        <property name="taskDesc">
            <column name="taskDesc" sql-type="varchar(128)" length="128" not-null="true"/>
        </property>
        <property name="pubTime">
            <column name="pubTime" sql-type="timestamp"/>
        </property>
        <property name="deadline">
            <column name="deadline" sql-type="timestamp" not-null="true"/>
        </property>
        <many-to-one name="cozNum" class="com.hfuu.web.entity.CourseEntity">
            <column name="cozNum" not-null="true"/>
        </many-to-one>
        <many-to-one name="tcNum" class="com.hfuu.web.entity.TeacherEntity">
            <column name="tcNum" not-null="true"/>
        </many-to-one>
        <list name="submit" inverse="true">
            <key>
                <column name="taskId"/>
            </key>
            <one-to-many not-found="ignore" class="com.hfuu.web.entity.SubmitEntity"/>
        </list>
    </class>
</hibernate-mapping>