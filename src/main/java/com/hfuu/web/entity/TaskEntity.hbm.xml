<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.hfuu.web.entity.TaskEntity" table="task" schema="hfuutest">
        <id name="taskId" column="taskId"/>
        <property name="taskName" column="taskName"/>
        <property name="taskDesc" column="taskDesc"/>
        <property name="pubTime" column="pubTime"/>
        <property name="deadline" column="deadline"/>
    </class>
</hibernate-mapping>