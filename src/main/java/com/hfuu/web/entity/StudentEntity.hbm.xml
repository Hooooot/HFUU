<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.hfuu.web.entity.StudentEntity" table="student" schema="hfuutest">
        <id name="stuId">
            <column name="stuId" sql-type="int(11)"/>
        </id>
        <property name="stuNum">
            <column name="stuNum" sql-type="char(10)" length="10"/>
        </property>
        <property name="stuName">
            <column name="stuName" sql-type="varchar(8)" length="8"/>
        </property>
        <property name="stuPw">
            <column name="stuPw" sql-type="varchar(20)" length="20"/>
        </property>
        <property name="stuSex">
            <column name="stuSex" sql-type="char(2)" length="2" not-null="true"/>
        </property>
        <property name="stuPhone">
            <column name="stuPhone" sql-type="char(11)" length="11" not-null="true"/>
        </property>
        <property name="stuAvatar">
            <column name="stuAvatar" sql-type="varchar(64)" length="64" not-null="true"/>
        </property>
        <many-to-one name="classNum" class="com.hfuu.web.entity.ClazzEntity">
            <column name="classNum" not-null="true"/>
        </many-to-one>
        <list name="submit" inverse="true">
            <key>
                <column name="stuNum" not-null="true"/>
            </key>
            <one-to-many not-found="ignore" class="com.hfuu.web.entity.SubmitEntity"/>
        </list>
    </class>
</hibernate-mapping>