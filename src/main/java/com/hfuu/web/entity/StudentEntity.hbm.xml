<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.hfuu.web.entity.StudentEntity" table="student" schema="hfuutest">
        <id name="stuId" column="stuId"/>
        <property name="stuNum" column="stuNum"/>
        <property name="stuPw" column="stuPw"/>
        <property name="stuSex" column="stuSex"/>
        <property name="stuPhone" column="stuPhone"/>
        <property name="stuAvatar" column="stuAvatar"/>
    </class>
</hibernate-mapping>