<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.hfuu.web.entity.ClazzEntity" table="clazz" schema="hfuutest">
        <id name="classId">
            <column name="classId" sql-type="int(11)"/>
        </id>
        <property name="classNum">
            <column name="classNum" sql-type="char(7)" length="7" not-null="true"/>
        </property>
        <property name="className">
            <column name="className" sql-type="varchar(64)" length="64" not-null="true"/>
        </property>
        <many-to-one name="depNum" class="com.hfuu.web.entity.DepartmentEntity">
            <column name="depNum" not-null="true"/>
        </many-to-one>
        <list name="course" inverse="true" table="course" schema="hfuutest" catalog="">
            <key>
                <column name="classNum" not-null="true"/>
            </key>
            <many-to-many not-found="ignore" class="com.hfuu.web.entity.CourseEntity">
                <column name="classNum" not-null="true"/>
            </many-to-many>
        </list>
        <list name="student" inverse="true">
            <key>
                <column name="classNum" not-null="true"/>
            </key>
            <one-to-many not-found="ignore" class="com.hfuu.web.entity.StudentEntity"/>
        </list>
    </class>
</hibernate-mapping>